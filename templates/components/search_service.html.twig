<div{{attributes}}>
	<!-- component html -->
	<div class="d-flex justify-content-center align-items-center">
		<input type="text" class="form-control shadow w-50" placeholder="Search service" data-model="query">
	</div>

	{% if computed.services|length > 0 %}
		<div data-loading="addClass(opacity-50)" class="mt-3 row">
			{% for service in computed.services %}
				<div class="col-lg-3 col-md-4 col-sm-6 mb-4 mt-4">
					<div class="text-center">
						<a href="{{ path('app_service_show', {id: service.id})}}">
							<img class="rounded-circle border border-4 border-info transition" src={{service.photo}} alt="Service image" style="width:150px; height:150px; object-fit:cover;">
						</a>
						<div class="pt-2">
							<h5>{{ service.name }}</h5>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="pt-3">Ah! No services found"{{ query }}"</div>
	{% endif %}
</div>
