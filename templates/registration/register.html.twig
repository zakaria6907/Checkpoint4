{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-center min-vh-100 py-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body shadow border border-3 border-info">
                {{ form_start(registrationForm) }}
                    <h1 class="h3 mb-3 font-weight-normal text-center display-3">Sign up</h1>

                    <div class="form-group">
                        {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control shadow mb-4'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(registrationForm.pseudo, {'label': 'Pseudo', 'attr': {'class': 'form-control shadow mb-4'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control shadow mb-4'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(registrationForm.agreeTerms, {'label': 'Agree to terms', 'attr': {'class': 'form-check-input shadow'}}) }}
                    </div>

                    <div class="form-group d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-lg btn-outline-info btn-block mt-4 shadow">Register</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
