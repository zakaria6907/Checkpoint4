{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>ContactS</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Object</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.object }}</td>
                <td>{{ contact.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a class="btn btn-danger" href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
